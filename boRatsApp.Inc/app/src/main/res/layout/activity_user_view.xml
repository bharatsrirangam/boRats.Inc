<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boratsinc.UserView">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btn_view_rat_sightings_user_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Rat Sightings" />

        <Button
            android:id="@+id/addbtn_user_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Rat Sighting"
            tools:text="Add Rat Sighting" />

        <Button
            android:id="@+id/logoutbtn_user_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
